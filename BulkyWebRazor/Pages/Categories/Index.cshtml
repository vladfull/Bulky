@page
@model BulkyWebRazor.Pages.Categories.IndexModel

<div class = "container">
	<div class= "row pt-4 pb-2">
		<div class="col-6">
			<h2>Categories</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/categories/create"  class="btn btn-primary">
				<i class="bi bi-patch-plus"></i> New Category
			</a>
		</div>
	</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Display Order
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var a in Model.CategoryList.OrderBy(u => u.DisplayOrder))
		{
			<tr>
				<td>
					@a.Name
				</td>
				<td>
					@a.DisplayOrder
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-page="/categories/edit" asp-route-id="@a.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i> Edit</a>
						<a asp-page="/categories/delete" asp-route-id="@a.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i> Delete</a>
					</div>
				</td>
			</tr>	
		}
		
	</tbody>
	
</table>
</div>
